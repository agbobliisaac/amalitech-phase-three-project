  "servers": [
    {
      "url": "http://localhost:8000/api/v1/",
      "description": "Development server"
    }
  ],
  "paths": {
    "/users/sign-in": {
      "post": {
        "summary": "Login to the application",
        "tags": [
          "User Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged in"
          },
          "400": {
            "description": "Invalid email or password"
          }
        }
      }
    },
    "/users/sign-up": {
      "post": {
        "summary": "Sign up for the application",
        "tags": [
          "User Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully signed up"
          },
          "400": {
            "description": "Invalid email or password"
          }
        }
      }
    },
    "/users/request-otp": {
      "post": {
        "summary": "Request OTP for the application",
        "tags": [
          "User Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully requested OTP"
          },
          "400": {
            "description": "Invalid email"
          }
        }
      }
    },
    "/users/verify": {
      "post": {
        "summary": "User Verification for the application",
        "tags": [
          "User Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "otp": {
                    "type": "string",
                    "format": "otp"
                  }
                },
                "required": [
                  "email",
                  "otp"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully verified user"
          },
          "400": {
            "description": "Invalid email or otp"
          }
        }
      }
    },
    "/users/forget-password": {
      "post": {
        "summary": "Forget Password for the application",
        "tags": [
          "User Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Check your email for a OTP to reset your password"
          },
          "400": {
            "description": "Invalid email"
          }
        }
      }
    },
    "/users/reset-password": {
      "post": {
        "summary": "Reset Password to the application",
        "tags": [
          "User Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  },
                  "otp": {
                    "type": "string",
                    "format": "otp"
                  }
                },
                "required": [
                  "email",
                  "password",
                  "otp"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Your password has been reset successfully"
          },
          "400": {
            "description": "Invalid email or otp"
          }
        }
      }
    },
    "/admins/sign-in": {
      "post": {
        "summary": "Login to the application",
        "tags": [
          "Admin Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged in"
          },
          "400": {
            "description": "Invalid email or password"
          }
        }
      }
    },
    "/files/": {    
      "get": {
        "summary": "Fetch of Files",
        "tags": [
          "Files"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
      
    },
    "/files/{id}" :{
      "get":{
        "summary": "Fetch of File",
        "tags": [
          "Files"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of file to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
   
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
 
}